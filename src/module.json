{
  "id": "psxverb",
  "name": "PSX Verb",
  "abbrev": "PX",
  "version": "0.5.2",
  "description": "PlayStation 1 SPU reverb emulation",
  "author": "charlesvestal",
  "license": "MIT",
  "dsp": "psxverb.so",
  "api_version": 2,
  "capabilities": {
    "chainable": true,
    "component_type": "audio_fx",
    "ui_hierarchy": {
      "levels": {
        "root": {
          "name": "PSX Verb",
          "params": [
            {
              "key": "model",
              "label": "Model",
              "type": "enum",
              "options": [
                "Room",
                "Studio S",
                "Studio M",
                "Studio L",
                "Hall",
                "Space Echo"
              ],
              "default": "Hall"
            },
            {
              "key": "decay",
              "label": "Decay",
              "type": "float",
              "min": 0.0,
              "max": 1.0,
              "default": 0.7,
              "step": 0.01,
              "unit": "%"
            },
            {
              "key": "mix",
              "label": "Mix",
              "type": "float",
              "min": 0.0,
              "max": 1.0,
              "default": 0.35,
              "step": 0.01,
              "unit": "%"
            },
            {
              "key": "input_gain",
              "label": "Input",
              "type": "float",
              "min": 0.0,
              "max": 1.0,
              "default": 0.5,
              "step": 0.01,
              "unit": "%"
            },
            {
              "key": "reverb_level",
              "label": "Level",
              "type": "float",
              "min": 0.0,
              "max": 1.0,
              "default": 0.5,
              "step": 0.01,
              "unit": "%"
            }
          ],
          "knobs": [
            "model",
            "decay",
            "mix",
            "reverb_level"
          ]
        }
      }
    }
  }
}
